.swiper__item{
  display: block;
  width: 100%;
  height: 11rem;
}
.swiper__desc{
  position: absolute;
  width: 100%;
  bottom: 0;
  padding: 10rpx;
  background-color: rgba(0, 0, 0,0.5);
  color: #fff;
  font-size: 28rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.swiper__id{
  float: right;
  padding-right: 20rpx;
  font-weight: 700;
}
.swiper__content{
    height: 100%;/**rem比rpx进率大**/
}